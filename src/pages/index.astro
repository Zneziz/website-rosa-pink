		<script>

			import { gsap } from 'gsap';
			import { ScrollTrigger } from 'gsap/ScrollTrigger';
			gsap.registerPlugin(ScrollTrigger);

			// Anima칞칚o Hero
			gsap.from("#hero-text", { opacity: 0, x: -50, duration: 1.2, ease: "power4.out" });

			// Anima칞칚o das Flores (Revelam conforme o scroll)
			gsap.from(".reveal-left", {
				x: -100,
				opacity: 0,
				scrollTrigger: {
					trigger: ".reveal-left",
					start: "top 80%",
					end: "top 40%",
					scrub: 1
				}
			});

			gsap.from(".reveal-right", {
				x: 100,
				opacity: 0,
				scrollTrigger: {
					trigger: ".reveal-right",
					start: "top 80%",
					end: "top 40%",
					scrub: 1
				}
			});

			// Revela칞칚o dos cards da galeria
			gsap.from(".reveal-up", {
				y: 50,
				opacity: 1,
				stagger: 0.2,
				duration: 1,
				scrollTrigger: {
					trigger: ".reveal-up",
					start: "top 90%"
				}

				
			});

			ScrollTrigger.batch(".reveal-img", {
					onEnter: (batch) => {
						gsap.from(batch, {
							opacity: 0,
							// MUDAN칂A 1: Reduzi a dist칙ncia. Menos caminho para percorrer no mesmo tempo = movimento mais lento.
							y: 60, // Era 80

							// MUDAN칂A 2: Aumentei a dura칞칚o. O movimento tem mais tempo para acontecer.
							duration: 1.8, // Era 1.2

							// MUDAN칂A 3: Aumentei o intervalo entre cada item. Fica menos "atropelado".
							stagger: 0.25, // Era 0.15

							// MUDAN칂A 4: Mudei a curva f칤sica. "expo.out" tem uma desacelera칞칚o final muito mais longa e suave que "power4".
							ease: "expo.out", 
							
							overwrite: true
						});
					},
					start: "top 90%",
				});

				const track = document.getElementById('carousel-track');
				const nextBtn = document.getElementById('next');
				const prevBtn = document.getElementById('prev');

				if (track && nextBtn && prevBtn) {
					nextBtn.addEventListener('click', () => {
						// Rola para a direita o equivalente a um item
						track.scrollLeft += track.offsetWidth * 0.8;
					});

					prevBtn.addEventListener('click', () => {
						// Rola para a esquerda
						track.scrollLeft -= track.offsetWidth * 0.8;
					});
				}


				
  

  // Efeito de entrada em cascata para os cards
  ScrollTrigger.batch(".reveal-card", {
    onEnter: (batch) => {
      gsap.to(batch, {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1.5,
        stagger: 0.2,
        ease: "expo.out",
