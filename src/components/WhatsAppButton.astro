---
// WhatsAppButton.astro
const phone = "5511999673057"; 
const message = encodeURIComponent("Olá! Gostaria de agendar um horário no Rosa Pink.");
const whatsappUrl = `https://wa.me/${phone}?text=${message}`;
---

<a 
  href={whatsappUrl} 
  target="_blank" 
  rel="noopener noreferrer"
  id="whatsapp-btn"
  class="fixed bottom-8 right-8 z-[999] flex items-center justify-center w-16 h-16 bg-[#25D366] rounded-full shadow-2xl opacity-0 invisible"
  aria-label="Contato via WhatsApp"
>
  <svg viewBox="0 0 448 512" class="w-8 h-8 fill-white">
    <path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.7 17.7 68.9 27.1 106.1 27.1h.1c122.4 0 222-99.6 222-222 0-59.3-23-115.1-65-157.1zM223.9 445.2c-33.2 0-65.8-8.9-94.2-25.7l-6.7-4-70 18.4 18.7-68.2-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 54 81.2 54.1 130.5 0 101.7-82.8 184.5-184.6 184.5zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-5.6-2.8-23.5-8.6-44.8-27.6-16.6-14.8-27.8-33.1-31.1-38.6-3.2-5.6-.3-8.6 2.5-11.4 2.5-2.5 5.5-6.5 8.3-9.7 2.8-3.2 3.7-5.5 5.5-9.2 1.9-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 13.2 5.7 23.5 9.2 31.6 11.8 13.3 4.2 25.4 3.6 35 2.2 10.7-1.5 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"/>
  </svg>
</a>

<script>
  import { gsap } from 'gsap';

  // Usamos o evento 'load' para garantir que o DOM e as imagens estejam prontos
  window.addEventListener('load', () => {
    const btn = document.getElementById('whatsapp-btn');

    if (btn) {
      // 1. Reset de estado e entrada
      gsap.set(btn, { autoAlpha: 1 }); // autoAlpha lida com opacity e visibility ao mesmo tempo
      
      gsap.from(btn, {
        scale: 0,
        duration: 1.2,
        delay: 1,
        ease: "back.out(1.7)"
      });

      // 2. Pulso infinito
      gsap.to(btn, {
        boxShadow: "0 0 0 20px rgba(37, 211, 102, 0)",
        repeat: -1,
        duration: 1.5,
        ease: "power2.out",
        startAt: { boxShadow: "0 0 0 0px rgba(37, 211, 102, 0.6)" }
      });
    }
  });
</script>